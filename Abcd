<body>

<div class="flashcard-container">
    <h1>ðŸ“š Single Flashcard Learning (A-E)</h1>

    <div class="flashcard">
        <h2 id="card-letter"></h2>
        <h3 id="card-word"></h3>
        <button id="sound-button" onclick="playSound()" style="padding: 10px 15px; background-color: #2196F3; color: white; border: none; border-radius: 5px; margin-top: 15px; cursor: pointer;">ðŸ”Š Hear Sound</button>
        <img id="card-image" src="" alt="Learning Image">
    </div>

    <div class="control-buttons">
        <button id="prev-button" onclick="changeCard(-1)">Previous</button>
        <button id="next-button" onclick="changeCard(1)">Next</button>
    </div>
</div>

<script>
    // Define the data for A to E
    const flashcardData = [
        { letter: 'A', word: 'Apple', image: 'a_img.jpg', sound: 'a_sound.mp3' },
        { letter: 'B', word: 'Ball', image: 'b_img.jpg', sound: 'b_sound.mp3' },
        { letter: 'C', word: 'Cat', image: 'c_img.jpg', sound: 'c_sound.mp3' },
        { letter: 'D', word: 'Dog', image: 'd_img.jpg', sound: 'd_sound.mp3' },
        { letter: 'E', word: 'Elephant', image: 'e_img.jpg', sound: 'e_sound.mp3' }
    ];

    let currentCardIndex = 0;

    function displayCard(index) {
        const data = flashcardData[index];
        document.getElementById('card-letter').textContent = data.letter;
        document.getElementById('card-word').textContent = `${data.letter} is for ${data.word}`;
        
        // *** File Path for GitHub: Uses the 'assets/' folder ***
        document.getElementById('card-image').src = 'assets/' + data.image; 

        // Ensure buttons are correctly enabled/disabled
        document.getElementById('prev-button').disabled = index === 0;
        document.getElementById('next-button').disabled = index === flashcardData.length - 1;

        // Play the sound automatically when the card loads
        playSound();
    }

    function changeCard(direction) {
        currentCardIndex += direction;
        // Check boundaries
        if (currentCardIndex < 0) {
            currentCardIndex = 0;
        } else if (currentCardIndex >= flashcardData.length) {
            currentCardIndex = flashcardData.length - 1;
        }
        displayCard(currentCardIndex);
    }

    function playSound() {
        const soundFile = flashcardData[currentCardIndex].sound;
        // *** File Path for GitHub: Uses the 'assets/' folder ***
        const audio = new Audio('assets/' + soundFile); 
        
        audio.play().catch(error => {
            console.error("Error playing sound:", error);
            // Show error message on button if sound fails
            const soundButton = document.getElementById('sound-button');
            soundButton.textContent = "ðŸ”Š Sound Error: File Missing!";
            soundButton.style.backgroundColor = "red";
            setTimeout(() => {
                soundButton.textContent = "ðŸ”Š Hear Sound";
                soundButton.style.backgroundColor = "#2196F3";
            }, 3000);
        });
    }

    // Call displayCard initially when the page loads
    window.onload = function() {
        displayCard(currentCardIndex);
    };

</script>

</body>
